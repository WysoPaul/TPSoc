void Affiche_Config (int position, int numero_afficheur){
	//HELLO 2019
	unsigned char Texte[] = {0x76,0x79,0x38,0x38,0x3F,0x0,0x5B,0x3F,0x06,0x6F};
	if( numero_afficheur < 6){
		IOWR(IP7SEG_BASE, numero_afficheur, Texte[position]);
	}
}

